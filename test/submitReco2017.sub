##
##  Submit RecoSelection job to Condor
##

executable  = execReco.sh
universe    = vanilla

output      = reports/selected_$(suffix)_$INT(Step).out
error       = reports/selected_$(suffix)_$INT(Step).err
log         = reports/selected_$(suffix)_$INT(Step).log

should_transfer_files   = YES
initialdir              = output
transfer_input_files    = source.tar.gz
when_to_transfer_output = ON_EXIT

arguments   = "$(suffix) $INT(Step)"

    suffix = muon_2017
    queue 35

    suffix = electron_2017
    queue 15

    suffix = zjets_m-50
    queue 4

    suffix = ttbar
    queue 4

    suffix = ww_2l2nu
    queue 1

    suffix = wz_2l2q
    queue 4

    suffix = wz_3lnu
    queue 1

    suffix = zz_2l2q
    queue 4

    suffix = zz_4l
    queue 2

    suffix = ggH_zz_4l
    queue 1

    suffix = vbfH_zz_4l
    queue 1
